{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Web",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/web/",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "buildFlags": [
                "-buildvcs=false",
            ],
        },
        {
            "name": "Launch CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/cli/",
            "console": "integratedTerminal",
            "args": [
                "-action=",
            ],
            "buildFlags": [
                "-buildvcs=false",
            ],
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Launch Kafka",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/kafka/",
            "console": "integratedTerminal",
            "args": [
                "-action=",
            ],
            "buildFlags": [
                "-buildvcs=false",
            ],
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Supertest",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/testify/",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "runtimeExecutable": "npm", //change this to your npm path
            "cwd": "${workspaceFolder}/testify/",
            "runtimeArgs": [
                "run",
                "test",
            ],
        },
    ]
}